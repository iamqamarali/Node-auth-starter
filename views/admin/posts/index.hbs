<div class="container-fluid">

    <header class="d-flex justify-content-between">
        <h3>Posts</h3>
        <a href="/dashboard/posts/create" class="btn btn-primary rounded-5 ">Create Post</a>
    </header>


    <div class="row py-5">
        <div class="col-12">
            <table class="table  table-hover">
                <thead>
                    <tr> 
                        <th scope="col">Author</th>
                        <th scope="col">Title</th>
                        <th>Body</th>
                        <th>Tags</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts }}
                    <tr>
                        <td>{{author.name}}</td>
                        <td>{{substring title 0 20}}...</td>
                        <td>{{substring body 0 50}}...</td>
                        <td>
                            {{#each tags}}
                                <span class="badge bg-dark">{{this}}</span>
                            {{/each}}
                        </td>
                        <td>{{formatDate createdAt }}</td>
                        <td class="text-center">
                            <span class="me-1"><i class="fa-solid fa-trash"></i></span>
                            <span class=""><i class="fa-solid fa-pen-to-square"></i></span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>    
    </div>    

</div>