<div class="container py-3 posts-page-content">
    <div class=" p-2"></div>

    <section class="row ">

        <header class="my-5">
            <h3 >All Posts </h3>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Laudantium, nesciunt adipisci magnam ipsa consectetur beatae nihil magni </p>
        </header>


        <% posts.forEach(post => { %>
            <div class="col-4 mb-2">
                <div class="card">
                    <img src="<%= post.image %>" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title.substring(0,50) %></h5>
                        <p class="card-text"><%= post.body.substring(0,200) %></p>
                        <div class="card-text d-flex justify-content-between align-items-center">
                            <div class="author">
                                <img src="<%= post.author.avatar %>" alt="">
                                <p><%= post.author.name %></p>
                            </div>

                            <small class="text-muted"><%= moment(post.createdAt).format('MMM Do Y') %></small>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </section>

    <div class="text-center my-3">
        <div class="d-inline-flex ">

            <% if (pagination.prev_page) { %>
                <a href="<%= pagination.prev_page_url %>" class="btn btn-dark me-3 d-block">Previous Page</a>
            <% } %>
            <a href="<%= pagination.next_page_url %>" class="btn btn-dark d-block">Next Page</a>

        </div>
    </div>
    


</div>